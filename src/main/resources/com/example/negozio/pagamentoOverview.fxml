<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="550.0" prefWidth="450.0"
            xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.negozio.pagamentoOverviewController">
   <children>
      <ImageView fitHeight="550.0" fitWidth="450.0">
         <image>
            <Image url="@../../../resources/backgroundRiparazione.png" />
         </image>
      </ImageView>
      <VBox prefHeight="550.0" prefWidth="450.0">
         <children>
            <HBox alignment="CENTER" prefHeight="137.0" prefWidth="450.0">
               <children>
                  <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="120.0" prefWidth="396.0" text="Seleziona metodo di pagamento" textAlignment="CENTER" textOverrun="CENTER_ELLIPSIS">
                     <font>
                        <Font name="Gill Sans MT Condensed" size="40.0" />
                     </font>
                     <padding>
                        <Insets top="60.0" />
                     </padding>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Label>
               </children>
               <opaqueInsets>
                  <Insets top="20.0" />
               </opaqueInsets>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
            <VBox alignment="CENTER_LEFT" prefHeight="225.0" prefWidth="450.0" spacing="20.0">
               <children>
                  <RadioButton fx:id="radioPayPal" contentDisplay="CENTER" mnemonicParsing="false" onAction="#handleTipoPagamento" prefHeight="34.0" prefWidth="146.0" text="PayPal" textAlignment="CENTER">
                     <font>
                        <Font name="Gill Sans MT Condensed" size="25.0" />
                     </font>
                     <VBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </VBox.margin>
                  </RadioButton>
                  <RadioButton fx:id="radioCarta" contentDisplay="CENTER" mnemonicParsing="false" onAction="#handleTipoPagamento" prefHeight="34.0" prefWidth="183.0" text="Carta di credito" textAlignment="CENTER">
                     <font>
                        <Font name="Gill Sans MT Condensed" size="25.0" />
                     </font>
                     <VBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </VBox.margin>
                  </RadioButton>
               </children>
               <opaqueInsets>
                  <Insets left="30.0" />
               </opaqueInsets>
               <padding>
                  <Insets bottom="10.0" left="160.0" top="10.0" />
               </padding>
            </VBox>
            <HBox alignment="CENTER" prefHeight="112.0" prefWidth="450.0">
               <children>
                  <Button fx:id="backButton" contentDisplay="CENTER" mnemonicParsing="false" onAction="#handleBackButton" text="Indietro">
                     <font>
                        <Font name="Gill Sans MT Condensed" size="20.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="250.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="avantiButton" alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#handlePaga" text="Avanti">
                     <font>
                        <Font name="Gill Sans MT Condensed" size="20.0" />
                     </font>
                  </Button>
               </children>
               <padding>
                  <Insets top="50.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
