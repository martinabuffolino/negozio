<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="550.0" prefWidth="450.0"
            xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.negozio.tabellaStatoController">
   <children>
      <ImageView fitHeight="550.0" fitWidth="450.0">
         <image>
            <Image url="@../../../resources/backgroundTabStato.png" />
         </image>
      </ImageView>
      <VBox prefHeight="536.0" prefWidth="450.0">
         <children>
            <HBox alignment="BOTTOM_LEFT" prefHeight="75.0" prefWidth="434.0">
               <children>
                  <ImageView fitHeight="59.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../resources/4.png" />
                     </image>
                     <HBox.margin>
                        <Insets left="5.0" top="5.0" />
                     </HBox.margin>
                  </ImageView>
               </children>
               <opaqueInsets>
                  <Insets right="10.0" />
               </opaqueInsets>
            </HBox>
            <HBox prefHeight="33.0" prefWidth="391.0">
               <children>
                  <Label prefHeight="31.0" prefWidth="175.0" text="STATO RIPARAZIONE" textAlignment="CENTER">
                     <font>
                        <Font name="Gill Sans MT Condensed" size="24.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="10.0" top="5.0" />
                     </HBox.margin>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets left="20.0" right="5.0" />
               </VBox.margin>
            </HBox>
            <VBox prefHeight="430.0" prefWidth="100.0">
               <children>
                  <TableView fx:id="smartphoneTab" prefHeight="374.0" prefWidth="383.0">
                     <columns>
                        <TableColumn fx:id="tabCodRip" prefWidth="82.0" text="CODRIP" />
                        <TableColumn fx:id="tabTipo" minWidth="78.0" prefWidth="128.0" text="TIPO" />
                        <TableColumn fx:id="tabStato" minWidth="86.0" prefWidth="96.0" text="STATO" />
                        <TableColumn fx:id="tabSmartphone" minWidth="100.0" prefWidth="103.0" text="SERIALE" />
                     </columns>
                     <VBox.margin>
                        <Insets bottom="10.0" left="20.0" right="20.0" />
                     </VBox.margin>
                  </TableView>
               </children>
            </VBox>
            <HBox alignment="CENTER" prefHeight="32.0" prefWidth="204.0">
               <children>
                  <Button fx:id="backButton" contentDisplay="CENTER" mnemonicParsing="false" onAction="#handleBackButton" text="Indietro">
                     <font>
                        <Font name="Gill Sans MT Condensed" size="20.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="250.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="updateStatus" alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#handleUpdate" text="Aggiorna">
                     <font>
                        <Font name="Gill Sans MT Condensed" size="20.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>